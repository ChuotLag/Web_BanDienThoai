
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}



@using DOANTKW.Models;
@model List<GioHang>

<h2>Giỏ Hàng Của Bạn</h2>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color: lightyellow">
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Ảnh bìa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Xem chi tiết</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.iMaSP</td>
                <td width="26%">@item.sTenSP</td>
                <td width="22%"><img src="/Images_KTL2/@item.sAnh" width="50%" /></td>
                @*<td width="12%">@item.iSoLuong</td>*@
                <td width="12%"><input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" size="2" style="width: 40px" /></td>
                <td width="12%">@String.Format("{0:0,0}", item.dDonGia)</td>
                <td width="16%">@String.Format("{0:0,0}", item.dThanhTien)</td>
                <td width="12%"><a href="@Url.Action("XemChiTiet", "SanPham", new { id = @item.iMaSP })">Deltail</a></td>
                <td>
                    <form method="post" action=" /GioHang/XoaGioHang">
                        @Html.Hidden("ms", item.iMaSP)
                        <button>Xóa</button>
                    </form>
                </td>
            </tr>
        }
        <tr style="background-color: lightyellow">
            <td colspan="3" style="color: blue; font-weight: bold; text-align: right">Tổng cộng:</td>
            <td style="color: red; font-weight: bold;">@ViewBag.TongSoLuong</td>
            <td></td>
            <td></td>
            <td style="color: red; font-weight: bold;">@String.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>
        </tr>
    </table>
</div>





