<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang Bán Điện Thoại</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <meta >
</head>
<body>

<header class="bg-info text-white text-center py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <!-- Phần hình ảnh đại diện của trang web -->
                <div id="avatarCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="\Images\Banner\Banner2.jpg" class="d-block w-100" alt="Hình ảnh đại diện 1" style="150%">
                        </div>
                        <div class="carousel-item">
                            <img src="\Images\Banner\Banner1.JPG" class="d-block w-100" alt="Hình ảnh đại diện 2" style="150%">
                        </div>
                        <div class="carousel-item">
                            <img src="\Images\Banner\Banner4.JPG" class="d-block w-100" alt="Hình ảnh đại diện 3" style="150%">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#avatarCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#avatarCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-5">
                @*<h1 class="text-warning">DienThoai.com</h1>*@
                <img src="~/Images/logo_dienthoaicom.png" style="width:125%"
            </div>
        </div>
    </div>
</header>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
        <div class="container navbar-nav mx-auto">
            <a href="#" class="nav-item nav-link text-decoration-none text-light">Trang Chủ</a>
            <a href="/DienThoai/GetDienThoai" class="nav-item nav-link text-decoration-none text-light">Điện Thoại</a>
            <a href="/PhuKien/GetPhuKien" class="nav-item nav-link text-decoration-none text-light">Phụ Kiện</a>
            <a href="/LapTop/GetLapTop" class="nav-item nav-link text-decoration-none text-light">Laptop</a>
            @Html.Action("PartialGioHang", "GioHang")

            <div>
                @if (Session["TaiKhoan"] == null)
                {
                <!-- Hiển thị nút đăng nhập nếu chưa đăng nhập -->
                    <a href="/Home/Login" class="nav-item nav-link text-decoration-none text-light">Đăng Nhập</a>
                }
                else
                {
                <!-- Hiển thị tên tài khoản nếu đã đăng nhập -->
                    <span class="nav-item nav-link text-light">Chào mừng, @Session["TaiKhoan"]!</span>
                <!-- Thêm nút đăng xuất nếu muốn -->
                    <a href="/Home/Logout" class="nav-item nav-link text-decoration-none text-light">Đăng Xuất</a>
                }

                <!-- Thanh search ... -->
            </div>
        </div>

        <!-- Thanh bên phải -->
        <div class="ml-auto">
            <!-- Thanh search -->
            <form class="form-inline" action="/SanPham/Search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" name="ten" placeholder="Tìm kiếm" aria-label="Tìm kiếm" aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-light" type="submit" id="button-addon2">Tìm</button>
                    </div>
                </div>
            </form>
        </div>
    </nav>


    <section class="container my-4">
        <div>
            @RenderBody()
        </div>
    </section>

    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p>Bản quyền © 2023 DienThoai.Com.</p>
            <p>Địa chỉ 22 Nguyễn Văn Săng, Phường Phú Trung, quận Tân Phú, thành phố Hồ Chí Minh</p>
            <p>SDT:0987654321 - 0123456789</p>
            <p>Email:DienThoaiReMaNgon@gmail.com</p>
        </div>
    </footer>

    <!-- Bao gồm Bootstrap JS và jQuery -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>
</html>
