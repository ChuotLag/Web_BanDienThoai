@model List<DOANTKW.Models.SanPham>

@{
    ViewBag.Title = "GetPhuKien";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-2 mb-4">
                <div class="card shadow" data-toggle="tooltip" data-placement="top" title="Bảo hành 6 tháng 1 đổi 1 ">
                    <img src="/Images/@item.Anh" class="card-img-top img-fluid" alt="@item.TenSP" style="width: 100%; height: 200px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate text-center">@item.TenSP</h5>
                        <p class="card-text text-center">$@item.GiaBan</p>
                        <div class="mt-auto mx-auto">
                            <a href="/SanPham/Detail/@item.MaSP" class="btn btn-primary">Mua</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
